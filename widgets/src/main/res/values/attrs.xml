<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FormView">
        <attr name="item_height" format="dimension|reference"/>
        <attr name="min_adjust_distance" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="HomepageLayout">
        <attr name="isContainer" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CharacterChooser">
        <attr name="default_color" format="color|reference" />
        <attr name="select_color" format="color|reference" />
        <attr name="size" format="integer" />
    </declare-styleable>

    <declare-styleable name="Ratio">
        <attr name="ratio" format="float" />
        <attr name="baseOnWidth" format="boolean" />
        <attr name="matchDrawableRatio" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FormLayout">
        <attr name="relative_width" format="float" />
        <attr name="relative_height" format="float" />
        <attr name="relative_left" format="float" />
        <attr name="relative_top" format="float" />
        <attr name="w_h_ratio" format="float" />
        <attr name="base_on_width" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Indicator">
        <attr name="drawable_default" format="reference" />
        <attr name="drawable_selected" format="reference" />
        <attr name="interval" format="dimension" />
        <attr name="drawable_width" format="dimension" />
        <attr name="drawable_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SimpleGridLayout">
        <attr name="grid_colum" format="integer" />
        <attr name="grid_row_height" format="dimension" />
        <attr name="grid_divider_width" format="dimension"/>
    </declare-styleable>
</resources>