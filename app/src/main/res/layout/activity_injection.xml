<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutAnimation="@anim/layout_random"
    tools:context=".main.frame.InjectionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/Theme.ToolBar.ZhiHu"
        app:title="Injection"
        app:subtitle="View injection"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:subtitleTextColor="#eee"
        app:titleTextColor="#fff"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <TextView
        android:id="@+id/show_toast2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aaa"
        android:gravity="center"
        android:text="Click me to show toast 2222" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/show_toast1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aaa"
        android:gravity="center"
        android:text="Click me to show toast 11111" />

    <Button
        android:id="@+id/set_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="点我改变下面的文字" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484" />

    <Button
        android:id="@+id/crash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="演示自动异常捕捉" />




    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#aaa" />


</LinearLayout>
