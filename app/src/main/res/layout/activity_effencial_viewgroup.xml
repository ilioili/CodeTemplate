<?xml version="1.0" encoding="utf-8"?>


<com.github.ilioili.widget.FormLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      app:base_on_width="true"
                                      app:w_h_ratio="1.25">

    <View
        android:layout_margin="1px"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#f00"
        app:relative_height="0.5"
        app:relative_left="0"
        app:relative_top="0"
        app:relative_width="0.5" />

    <View
        android:layout_margin="1px"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#0f0"
        app:relative_height="0.333333333"
        app:relative_left="0.5"
        app:relative_top="0"
        app:relative_width="0.5" />

    <View
        android:layout_margin="1px"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#0f9"
        app:relative_height="0.666666666"
        app:relative_left="0.5"
        app:relative_top="0.333333333"
        app:relative_width="0.5" />

    <View
        android:layout_margin="1px"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#550"
        app:relative_height="0.25"
        app:relative_left="0"
        app:relative_top="0.5"
        app:relative_width="0.5" />

    <View
        android:layout_margin="1px"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#555"
        app:relative_height="0.25"
        app:relative_left="0"
        app:relative_top="0.75"
        app:relative_width="0.5" />

    <View
        android:layout_margin="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808"
        app:relative_height="0.25"
        app:relative_left="0"
        app:relative_top="1"
        app:relative_width="0.333333333" />
    <View
        android:layout_margin="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808"
        app:relative_height="0.25"
        app:relative_left="0.333333333"
        app:relative_top="1"
        app:relative_width="0.666666666" />

</com.github.ilioili.widget.FormLayout>