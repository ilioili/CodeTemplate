        <activity
            android:name=".ShowFinishAppActivity"
            android:label="@string/title_activity_show_finish_app"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.google.LoginActivity"
            android:label="@string/title_activity_login" />
